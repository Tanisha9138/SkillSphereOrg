<%- include('partials/header') %>

<section class="hero-section">
  <div class="slideshow-background">
    <ul class="cb-slideshow">
      <li><span>Image 01</span></li>
      <li><span>Image 02</span></li>
      <li><span>Image 03</span></li>
      <li><span>Image 04</span></li>
    </ul>
  </div>

  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">Our freelancers will take it from here</h1>
      <p class="hero-subtitle">Find top talent for your projects, instantly.</p>

      <div class="search-container">
        <div class="search-input-wrapper">
          <input type="text" id="search-input" class="search-input" required>
          <label for="search-input">Search for any service...</label>
          <button type="submit"><i class="fas fa-search"></i></button>
        </div>
      </div>

      <div class="popular-searches">
        <a href="/search?query=website">Website Development</a>
        <a href="/search?query=logo">Logo Design</a>
        <a href="/search?query=writing">Content Writing</a>
        <a href="/search?query=video">Video Editing & Motion Design</a>
      </div>
    </div>
  </div>
</section>

<section class="trusted-by">
  <div class="container">
    <p>Trusted by:</p>
    <div class="brand-logos">
      <% const brands = ['Facebook', 'Google', 'NETFLIX', 'P&G', 'PayPal', 'Pinterest']; %>
      <% brands.forEach(brand => { %>
        <div class="brand"><%= brand %></div>
      <% }); %>
    </div>
  </div>
</section>

<section class="categories">
  <div class="container">
    <h2>Explore Categories</h2>
    <div class="category-grid">
      <% categories.forEach(category => { %>
        <a href="/jobs?category=<%= category.id %>" class="category-card">
          <div class="icon"><i class="fas fa-<%= category.icon %>"></i></div>
          <h3><%= category.name %></h3>
        </a>
      <% }); %>
    </div>
  </div>
</section>

<section class="popular-services">
  <div class="container">
    <h2>Popular Services</h2>
    <div class="services-grid">
      <% popularJobs.forEach(job => { %>
        <a href="/job/<%= job.id %>" class="service-card">
          <div class="service-image">
            <img src="/images/<%= job.image %>" alt="<%= job.title %>">
          </div>
          <div class="service-info">
            <h3><%= job.title %></h3>
            <p class="price"><%= job.price %></p>
          </div>
        </a>
      <% }); %>
    </div>
  </div>
</section>

<section class="business-promo">
  <div class="container promo-container">
    <div class="promo-content">
      <h2>Instant results. Top talent.</h2>
      <p>Find skill-matched freelancers in minutes with our AI-powered solution. Access top professionals from our global talent pool for your business needs.</p>
      <a href="#" class="cta-button">Get started</a>
    </div>

    <div class="promo-image">
      <img src="/images/business-promo.jpg" alt="Business solutions">
    </div>
  </div>
</section>

<section class="pro-section">
  <div class="container pro-container">
    <div class="pro-content">
      <h2>The premium freelance solution for businesses</h2>

      <div class="features-grid">
        <% const features = [
          { icon: 'user-tie', title: 'Dedicated hiring experts', description: 'Get matched with vetted professionals for your project needs.' },
          { icon: 'check-circle', title: 'Satisfaction guarantee', description: 'We offer a 100% money-back guarantee if you\'re not satisfied.' },
          { icon: 'tasks', title: 'Advanced management tools', description: 'Centralize projects, communications and payments.' },
          { icon: 'file-invoice-dollar', title: 'Flexible payment models', description: 'Pay per project or set up recurring subscription plans.' }
        ]; %>

        <% features.forEach(feature => { %>
          <div class="feature-card">
            <i class="fas fa-<%= feature.icon %>"></i>
            <h3><%= feature.title %></h3>
            <p><%= feature.description %></p>
          </div>
        <% }); %>

      </div>

      <a href="#" class="cta-button">Try Now</a>

    </div>

    <img src="/images/proo-section.jpg" alt="" />
  </div>
</section>

<%- include('partials/footer') %>
